{
  "routingDefaults": {
    "maxJourneyDuration": "6h",
    "boardSlack": "0M",
    "alightSlack": "0M",
    "transferSlack": 180,
    "waitReluctance": 0.9,
    "walkReluctance": 2.75,
    "stairsReluctance": 1.65,
    "carReluctance": 16,
    "numItineraries": 3,
    "itineraryFilters": {
      // only show non-transit (ie. walking) when it's at least as good as the transit option
      "nonTransitGeneralizedCostLimit": "0 + 1.0 x"
    }
  },
  "transit": {
    "maxNumberOfTransfers": 4,
    "dynamicSearchWindow": {
      "minTransitTimeCoefficient": 0.5,
      "minWaitTimeCoefficient": 0.5,
      "minWindow": "8h",
      "maxWindow": "8h"
    }
  },
  "updaters": [
    {
      "type": "real-time-alerts",
      "frequency": "20s",
      "url": "http://trimet.org/transweb/ws/V1/FeedSpecAlerts/includeFuture/true/suppressSystemWideAlerts/true/",
      "feedId": "TRIMET"
    },
    {
      "type": "stop-time-updater",
      "frequency": "31s",
      "url": "http://trimet.org/transweb/ws/V1/TripUpdate",
      "feedId": "TRIMET"
    },
    {
      "type": "vehicle-positions",
      "frequency": "37s",
      "url": "http://trimet.org/transweb/ws/V1/VehiclePositions",
      "feedId": "TRIMET"
    },
    {
      "type": "vehicle-rental",
      "frequency": "40s",
      "sourceType": "gbfs",
      "url": "https://gbfs.biketownpdx.com/gbfs/2.3/gbfs.json"
    },
    {
      "type": "vehicle-rental",
      "frequency": "43s",
      "network": "LIME",
      "sourceType": "gbfs",
      "url": "https://data.lime.bike/api/partners/v2/gbfs/portland/gbfs.json"
    }
  ],
  "vectorTiles": {
    "basePath": "/otp_ct/vectorTiles",
    "layers": [
      {
        "name": "stops",
        "type": "Stop",
        "mapper": "Digitransit",
        "maxZoom": 20,
        "minZoom": 4,
        "filter": "sunday-to-sunday-service-week",
        "cacheMaxSeconds": 600
      },
      {
        "name": "stations",
        "type": "Station",
        "mapper": "Digitransit",
        "maxZoom": 20,
        "minZoom": 2,
        "cacheMaxSeconds": 600
      },
      {
        "name": "rentalVehicles",
        "type": "VehicleRentalVehicle",
        "mapper": "Digitransit",
        "maxZoom": 20,
        "minZoom": 2,
        "cacheMaxSeconds": 60
      },
      {
        "name": "rentalStations",
        "type": "VehicleRentalStation",
        "mapper": "Digitransit",
        "maxZoom": 20,
        "minZoom": 2,
        "cacheMaxSeconds": 600
      },
      {
        "name": "vehicleParking",
        "type": "VehicleParking",
        "mapper": "Digitransit",
        "maxZoom": 20,
        "minZoom": 10,
        "cacheMaxSeconds": 60,
        "expansionFactor": 0.25
      }
    ]
  },
  "rideHailingServices": [
    {
      "type": "uber-car-hailing",
      "clientId": "${UBER_CLIENT_ID}",
      "clientSecret": "${UBER_CLIENT_SECRET}",
      "wheelchairAccessibleProductId": "970ed376-bd33-4ad1-81c5-d2928a347a06"
    }
  ]
}
